<% if produto_categorium.present? %>
</br>
<div class="bg-holder d-none d-lg-block stiviebg-card " style="background-image:url(../assets/img/illustrations/corner-4.png);">
</div>
<%= form_with(model: produto_categorium, url: {action: produto_categorium.new_record? ? :create : :update},  local: true) do |form| %>
  <%= error_messages_for produto_categorium %>

  <!-- Inicio Cabeçalho -->
  <div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../assets/img/illustrations/corner-4.png);">
    </div>
    <!--/.bg-holder-->

  </div>
  <!-- Fim Cabeçalho -->

  <div class="card mb-3">
    <div class="card-header">
      <h3 class="mb-0"><%=  produto_categorium.new_record? ? 'Categoria de Produto' : 'Editar Categoria de Produto'  %></h3>
      <h6 class="mb-1 float-right text-primary">Formulário</h6>
      <h3 class="mb-3 col-12 dropdown-divider"></h3>
    </div>
    <div class="card-body bg-light">
      <div class="row">
        <div class="col-12">
          <div class="field">
            <%= form.label :empresa_id,("Empresa: #{@empresa_logado.empresa.razao}"), class:' font-weight-extra-bold float-right text-primary', style:'font-size: 20px;' %>
            <%= hidden_field_tag :produto_categoria_id,  produto_categorium.id %>
          </div>
          <div class="form-group">
            <%= form.label :descricao, "Categoria" %>
            <%= form.text_field :descricao, class:'form-control'%>
          </div>
          <div class="form-group">
            <%= form.label :disponivel, "Disponível?" %>
            <%= form.select :disponivel, options_for_select([["Sim", true], ["Nao", false]], produto_categorium.disponivel ),{}, {class:'form-control'} %>
          </div>
          <%= form.submit  produto_categorium.new_record? ? 'Salvar' : 'Editar', class:'btn btn-primary mb-3'  %>
          <%= link_to 'Voltar',lojista_produto_categorias_index_path  , class:'btn btn-warning mb-3' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% else %>
  <p> Produto não localizado</p>
<% end %>