<% if plano_pagamento.present? %>
<br/>
<%= form_with(model: plano_pagamento, url: {action: plano_pagamento.new_record? ? :create : :update},  local: true) do |form| %>
  <%= error_messages_for plano_pagamento %>

  <!-- Inicio Cabeçalho -->
  <div class="card mb-3">
    <!--/.bg-holder-->
  </div>
  <!-- Fim Cabeçalho -->

  <div class="card mb-3">
    <div class="card-header">
      <h3 class="mb-0"><%=  plano_pagamento.new_record? ? 'Plano de Pagamento' : 'Editar Plano de Pagamento'  %></h3>
      <h6 class="mb-1 float-right text-primary">Formulário</h6>
      <h3 class="mb-3 col-12 dropdown-divider"></h3>
    </div>
    <div class="card-body bg-light">
      <div class="row">
        <div class="col-12">
          <div class="field">
            <%= form.label :empresa_id,("Empresa: #{@empresa_logado.empresa.razao}"), class:' font-weight-extra-bold float-right text-primary', style:'font-size: 20px;' %>
            <%= hidden_field_tag :plano_pagamento_id,  plano_pagamento.id %>
          </div>
          <div class="form-group">
            <%= form.label :descricao, "Plano de Pagamento" %>
            <%= form.text_field :descricao, class:'form-control'%>
          </div>
          <div class="form-group">
            <%= form.label :disponivel, "Disponível?" %>
            <%= form.select :disponivel, options_for_select([["Sim", true], ["Nao", false]], plano_pagamento.disponivel ),{}, {class:'form-control'} %>
          </div>
          <div class="form-group">
            <%= form.label :troco_ativo, "Troco?" %>
            <%= form.select :troco_ativo, options_for_select([["Sim", true], ["Nao", false]], plano_pagamento.troco_ativo ),{}, {class:'form-control'} %>
          </div>
          <%= form.submit  plano_pagamento.new_record? ? 'Salvar' : 'Editar', class:'btn btn-primary mb-3'  %>
          <%= link_to 'Voltar',lojista_plano_pagamentos_index_path  , class:'btn btn-warning mb-3' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% else %>
  <p> Plano de Pagamento não localizado</p>
<% end %>