<br/>
<%= form_with(model: plataforma_usuario, url:{action: :update} , local: true, html: { multipart: true }) do |form| %>
  <%= error_messages_for plataforma_usuario %>

  <!-- Inicio Cabeçalho -->
  <div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../assets/img/illustrations/corner-4.png);">
    </div>
    <!--/.bg-holder-->

  </div>
  <!-- Fim Cabeçalho -->

  <div class="card mb-3">
    <div class="card-header">
      <h3 class="mb-0"><%=  plataforma_usuario.new_record? ? 'Usuário' : 'Editar Usuário'  %></h3>
      <h6 class="mb-1 float-right text-primary">Formulário</h6>
      <h3 class="mb-3 col-12 dropdown-divider"></h3>
    </div>
    <div class="card-body bg-light">
      <div class="row">
        <div class="col-12">
          <form>
            <div class="field">
              <%= form.label :plataforma_id, ("#{@plataforma.descricao}"), class:' font-weight-extra-bold float-right text-primary', style:'font-size: 20px;' %>
              <%= form.hidden_field :plataforma_id, value: @plataforma.id %>
            </div>
            <div class="form-group">
              <%= form.label :avatar, " Avatar" %>
              <%= form.file_field :avatar, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :nome, "Usuário" %>
              <%= form.text_field :nome, class:'form-control'%>
            </div>
            <div class="form-group">
              <%= form.label :email, "E-mail" %>
              <%= form.email_field :email, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :senha, "Senha" %>
              <%= form.password_field :senha, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :ativo, "Ativar" %>
              <%= form.select :ativo, options_for_select([["Sim", true], ["Nao", false]], plataforma_usuario.ativo ),{}, {class:'form-control'} %>
            </div>
          </form>
          <%= form.submit 'Editar', class:'btn btn-primary mb-3'  %>
          <%= link_to 'Voltar', admin_panel_visao_geral_path, class:'btn btn-warning mb-3' %>
        </div>
      </div>
    </div>
  </div>
<% end %>