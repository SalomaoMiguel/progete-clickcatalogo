<!-- Modelo Forms -->
</br>
<div class="bg-holder d-none d-lg-block stiviebg-card " style="background-image:url(../assets/img/illustrations/corner-4.png);">
</div>
<%= form_with(model: [:admin, sub_menu], local: true) do |form| %>
  <%= error_messages_for sub_menu %>

  <!-- Inicio Cabeçalho -->
  <div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../assets/img/illustrations/corner-4.png);">
    </div>
  </div>
  <!-- Fim Cabeçalho -->

  <div class="card mb-3">
    <div class="card-header">
      <h3 class="mb-0"><%=  sub_menu.new_record? ? 'Sub Menu' : 'Editar Sub Menu'  %></h3>
      <h6 class="mb-1 float-right text-primary">Formulário</h6>
      <h3 class="mb-3 col-12 dropdown-divider"></h3>
    </div>
    <div class="card-body bg-light">
      <div class="row">
        <div class="col-12">
          <form>
            <div class="form-group">
              <%= form.label :menu_id %>
              <%= form.select :menu_id , @menus.collect{|menu| [menu.name, menu.id ]}, {include_blank: 'Selecione um menu'},{class:'form-control'} %>
            </div>
            <div class="form-group">
              <%= form.label :sub_menu_id %>
              <%= form.select :sub_menu_id , @sub_menus.collect {|sub_menu| [sub_menu.name, sub_menu.id ]}, {include_blank: 'Selecione um sub-menu'},{class:'form-control'} %>
            </div>
            <div class="form-group">
              <%= form.label :permission_action_id %>
              <%= form.select :permission_action_id , @permission_actions.collect {|action| [action.caminho, action.id ]}, {include_blank: 'Selecione uma action'},{class:'form-control'} %>
            </div>
            <div class="form-group">
              <%= form.label :name, "Nome" %>
              <%= form.text_field :name, class:'form-control'%>
            </div>
            <div class="form-group">
              <%= form.label :ajax, "Ajax" %>
              <%= form.select :ajax, options_for_select([["Sim", true], ["Nao", false]], sub_menu.ajax ),{}, {class:'form-control'} %>
            </div>
            <div class="form-group">
              <%= form.label :active, "Ajax" %>
              <%= form.select :active, options_for_select([["Sim", true], ["Nao", false]], sub_menu.active ),{}, {class:'form-control'} %>
            </div>
          </form>
          <%= form.submit  sub_menu.new_record? ? 'Salvar' : 'Editar', class:'btn btn-primary mb-3'  %>
          <%= link_to 'Voltar', admin_menus_path, class:'btn btn-warning mb-3' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
