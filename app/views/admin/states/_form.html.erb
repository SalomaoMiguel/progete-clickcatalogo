<div class="bg-holder d-none d-lg-block stiviebg-card " style="background-image:url(../assets/img/illustrations/corner-4.png);">
</div>
<%= form_with(model: [:admin, @country, state] , local: true) do |form| %>
  <%= error_messages_for state %>

  <!-- Inicio Cabeçalho -->
  <div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../assets/img/illustrations/corner-4.png);">
    </div>

  </div>
  <!-- Fim Cabeçalho -->

  <div class="card mb-3">
    <div class="card-header">
      <h3 class="mb-0"><%=  state.new_record? ? 'Novo Estado' : 'Editar Estado'  %></h3>
      <h6 class="mb-1 float-right text-primary">Formulário</h6>
      <h3 class="mb-3 col-12 dropdown-divider"></h3>
    </div>
    <div class="card-body bg-light">
      <div class="row">
        <div class="col-12">
          <form>
            <div class="field mb-1">
              <%= form.label :country_id,("País #{@country.name}"), class:' font-weight-extra-bold float-right text-primary', style:'font-size: 20px;' %>
              <%= form.hidden_field :country_id, value: @country.id %>
            </div>
            <div class="form-group">
              <%= form.label :name, "Estado" %>
              <%= form.text_field :name, class:'form-control'%>
              <small class="text-muted">Nome do Estado</small>
            </div>
            <div class="form-group">
              <%= form.label :acronym, "Sigla" %>
              <%= form.text_field :acronym, class:'form-control'%>
              <small class="text-muted">Sigla do Estado (duas letras)</small>
            </div>
            <div class="form-group">
              <%= form.label :code, "Código" %>
              <%= form.text_field :code, class:'form-control'%>
              <small class="text-muted">Código do Estado</small>
            </div>
            <div class="form-group">
              <%= form.label :active, "Ativar" %>
              <%= form.select :active, options_for_select([["Sim", true], ["Nao", false]], state.active ),{}, {class:'form-control'} %>
              <small class="text-muted">Ativado ou Desativado</small>
            </div>
          </form>
          <%= form.submit  state.new_record? ? 'Salvar' : 'Editar', class:'btn btn-primary mb-3'  %>
          <%= link_to 'Voltar', admin_country_path(@country, state), class:'btn btn-warning mb-3' %>
        </div>
      </div>
    </div>
  </div>
<% end %>